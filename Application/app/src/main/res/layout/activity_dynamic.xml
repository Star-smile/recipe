<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DynamicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@null"
            android:textSize="30dp"
            android:hint="请输入您的菜谱名称"/>

        <ImageButton
            android:id="@+id/process"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="5dp"
            android:src="@drawable/caipufeimian" />

        <EditText
            android:id="@+id/story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="请输入这道美食背后的故事"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:text="用料"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="10dp"
            android:text="猜您可能需要用到"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/salt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="食盐"/>
                <Button
                    android:id="@+id/chicken"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="鸡精"/>
                <Button
                    android:id="@+id/sauce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="老抽"/>
                <Button
                    android:id="@+id/pepper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="花椒"/>
                <Button
                    android:id="@+id/vinegar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="食醋"/>
                <Button
                    android:id="@+id/green_pepper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="青椒"/>
                <Button
                    android:id="@+id/egg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="鸡蛋"/>
                <Button
                    android:id="@+id/spice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="五香粉"/>
                <Button
                    android:id="@+id/hot_pepper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="辣椒"/>
                <Button
                    android:id="@+id/onion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="葱"/>
                <Button
                    android:id="@+id/fragrance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="香菜"/>
                <Button
                    android:id="@+id/ginger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="生姜"/>
                <Button
                    android:id="@+id/garlic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="蒜"/>
                <Button
                    android:id="@+id/wine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="料酒"/>
                <Button
                    android:id="@+id/sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="冰糖"/>

            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="1dp"
            android:background="#808080" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:isScrollContainer="true">

                <LinearLayout
                    android:id="@+id/linear_Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/del"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/del"
                        android:layout_margin="3dp"
                        android:background="@color/red"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:clickable="true"/>

                    <EditText
                        android:id="@+id/recipe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_margin="6dp"
                        android:textColor="@color/black"
                        android:layout_weight="2"
                        android:hint="食材：如鸡蛋"/>
                    <EditText
                        android:id="@+id/consumption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:background="@null"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:hint="用量：如1个"/>
                    <ImageView
                        android:id="@+id/move"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/move"
                        android:layout_gravity="center"
                        android:layout_margin="3dp"
                        android:visibility="gone"
                        android:clickable="true"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_margin="5dp"
            android:layout_height="1dp"
            android:background="#808080" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/red"
                android:layout_margin="10dp"
                android:text="在增加一行"
                android:clickable="true"/>
            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:textColor="@color/red"
                android:text="调整用料"
                android:clickable="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:text="做法"/>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/del1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:src="@drawable/del"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:background="@color/red"
                android:visibility="gone"
                android:layout_weight="0.5"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/process1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp"
                    android:text="步骤1"/>

                <ImageButton
                    android:id="@+id/image1"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/process"
                    android:clickable="true" />

                <EditText
                    android:id="@+id/explain1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="请添加步骤说明，至少2步"/>

            </LinearLayout>


            <ImageView
                android:id="@+id/move1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:clickable="true"
                android:visibility="gone"
                android:src="@drawable/move"/>

        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/process_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:isScrollContainer="true">

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/del2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:src="@drawable/del"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:background="@color/red"
                        android:visibility="gone"
                        android:clickable="true"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/process2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="15dp"
                            android:text="步骤2"/>

                        <ImageButton
                            android:id="@+id/image2"
                            android:layout_gravity="center"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/process" />

                        <EditText
                            android:id="@+id/explain2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:hint="请添加步骤说明，至少2步"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/move2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:src="@drawable/move"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:textColor="@color/red"
                android:clickable="true"
                android:text="在增加一步"/>
            <TextView
                android:id="@+id/change_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:textColor="@color/red"
                android:clickable="true"
                android:text="调整步骤"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="25dp"
            android:text="小贴士"/>

        <EditText
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="100dp"
            android:background="@null"
            android:hint="这道菜还有哪些需要注意的细节和技巧"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:textSize="25dp"
            android:text="烹饪时长"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:text="0~15分钟"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:text="15~30分钟"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:text="30~45分钟"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:text="45~60分钟"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:text="1小时以上"/>

            </RadioGroup>

        </HorizontalScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="#808080" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:textSize="25dp"
            android:text="烹饪难度"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="零厨艺"/>

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="容易"/>

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/radiobutton_background"
                    android:text="有点挑战"/>

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="压力略大"/>

                <RadioButton
                    android:id="@+id/radio5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="比较难"/>
            </RadioGroup>

        </HorizontalScrollView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="#808080" />


        <Button
            android:id="@+id/publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:textSize="25dp"
            android:text="发布菜谱"/>

    </LinearLayout>

</ScrollView>